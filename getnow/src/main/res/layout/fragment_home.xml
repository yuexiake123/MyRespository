<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_search" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <GridLayout
                    android:id="@+id/gl_building"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2" >

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:src="@drawable/building_19"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="19 楼"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="共 17 个教室"
                            android:textColor="@color/gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_2"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:src="@drawable/building_16"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="学 16 楼"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="共 3 个教室"
                            android:textColor="@color/gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_3"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:src="@drawable/building_1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="教 1 楼"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="共 8 个教室"
                            android:textColor="@color/gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_4"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:src="@drawable/building_5"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="教 5 楼"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="共 17 个教室"
                            android:textColor="@color/gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_5"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:src="@drawable/building_keyan"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="科研楼"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="共 44 个教室"
                            android:textColor="@color/gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_6"
                        android:layout_width="180dp"
                        android:layout_height="220dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:src="@drawable/building_zonghe"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="综合楼"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="共 33 个教室"
                            android:textColor="@color/gray"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </GridLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>